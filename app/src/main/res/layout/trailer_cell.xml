<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <net.steamcrafted.materialiconlib.MaterialIconView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/trailer_play_icon_width_height"
        android:layout_alignParentLeft="true"
        android:layout_height="@dimen/trailer_play_icon_width_height"
        app:materialIcon="play"
        app:materialIconColor="@android:color/black"
        app:materialIconSize="@dimen/trailer_play_icon_width_height"
        android:scaleType="center"
        android:background="@android:color/white"
        android:id="@+id/icon"
    />

    <TextView
        android:id="@+id/trailer_name_text_view"
        android:layout_toRightOf="@id/icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

</RelativeLayout>